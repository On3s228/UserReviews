{% extends 'base.html.twig' %}

{% block title %}{{ user.userIdentifier ~ "'s Profile" }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.19.1/dist/bootstrap-table.min.css">
{% endblock %}


{% block body %}
    {{ parent()  }}
    <div class="row m-sm-4">
        <div class="bg-light rounded-3">
            <div class="row m-3">
                <img class="avatar avatar-128 bg-light rounded-circle text-white p-2 border-0" src="{{ user.avatarUrl }}"/>
                <div class="col">
                    <h1>{{ user.userIdentifier }}</h1>
                    <p>{{ 'Total user likes:'|trans }} {{ total_likes }}â™¥</p>
                    {% if app.user %}
                        {% if app.user.id == user.id %}
                            <button type="button" class="btn btn-outline-primary">{{ 'Edit profile'|trans }}</button>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="mt-4 bg-light">
            <div class="row justify-content-between mt-3">
                <div class="col-auto">
                    <h3>{{ 'Reviews'|trans }}</h3>
                </div>
                {% if app.user %}
                    {% if app.user.id == user.id or "ROLE_ADMIN" in app.user.roles %}
                        <div class="col-auto me-3">
                            <form action="{{ path('review_add') }}">
                                <button title="Create review" class="btn btn-outline-primary">
                                    <i class="fa-solid fa-plus"></i>
                                </button>
                            </form>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
            <table
                    id="reviews"
                    data-toggle="table"
                    data-pagination="true"
                    data-search="true"
                    data-locale="{{ app.request.locale }}"
                    data-id-table="reviewsTable">
                <thead>
                    <tr>
                        <th data-sortable="true">{{ 'Review name'|trans }}</th>
                        <th data-sortable="true">{{ 'Group'|trans }}</th>
                        <th data-sortable="true">{{ 'Rating'|trans }}</th>
                        <th data-sortable="true">{{ 'Likes'|trans }}</th>
                        <th data-sortable="true">{{ 'Comments'|trans }}</th>
                        {% if app.user and app.user.id == user.id %}
                            <th>{{ 'Actions'|trans }}</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for review in user.reviews %}
                        <tr>
                            <th><a style="text-decoration: inherit;" href="{{ path('review', {'id': review.id}) }}">{{ review.name }}</a></th>
                            <td>{{ review.reviewGroup }}</td>
                            <td>{{ review.rating }}</td>
                            <td>{{ review.likes|length }}</td>
                            <td>{{ review.comments|length }}</td>
                            {% if app.user and app.user.id == user.id %}
                                <td>{{ include('profile/_buttons.html.twig', {review: review}) }}</td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">{{ 'Review remove confirmation.'|trans }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ 'Are you sure want to remove this review? Changes cannot be undone.'|trans }}
                    <span hidden id="userId"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">{{ 'Cancel'|trans }}</button>
                    <button type="button" onclick="modalConfirm()" class="btn btn-outline-danger">{{ 'Yes, I am sure!'|trans }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/profile.js') }}"></script>
    <script src="https://unpkg.com/bootstrap-table@1.19.1/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.19.1/dist/extensions/toolbar/bootstrap-table-toolbar.min.js"></script>
    <script src="{{ asset('js/bootstrap-table-ru.js') }}"></script>
    <script src="{{ asset('js/bootstrap-table-en.js') }}"></script>
{% endblock %}
