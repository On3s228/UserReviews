{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="m-5">
        <div class="row text-center bg-light m-5">
            <div class="m-3">
                <h1 class="h3 font-weight-normal">{{ 'Please sign in'|trans }}</h1>
                <p>{{ 'We support only socials authorization'|trans }}</p>
                <div class="row">
                    <div class="col-4"></div>
                    <div id="socials-buttons" class="col-4">
                        <div class="row">
                            <input onclick="facebook_login()" type="button" class="btn btn-primary" value="{{ 'Login with Facebook'|trans }}">
                        </div>
                        <div class="row mt-3">
                            <input type="button" onclick="google_login()" class="btn btn-success" value="{{ 'Login with Google'|trans }}">
                        </div>
                    </div>
                    <div class="col-4"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        function facebook_login(){
            location.replace("{{ path('connect_facebook_start') }}");
        }
        function google_login(){
            location.replace("{{ path('connect_google_start') }}")
        }
    </script>
{% endblock %}
