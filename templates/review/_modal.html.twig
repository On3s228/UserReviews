<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">{{ 'Review remove confirmation.'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ 'Are you sure want to remove this review? Changes cannot be undone.'|trans }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">{{ 'Cancel'|trans }}</button>
                <form action="{{ path('review_remove', {'id': review.id}) }}" method="post">
                    <button type="submit" class="btn btn-outline-danger">{{ 'Yes, I am sure!'|trans }}</button>
                </form>
            </div>
        </div>
    </div>
</div>